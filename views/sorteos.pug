extends layout

block content
  if error || errorToken
    div(class="alert alert-dismissible alert-danger")
      p=error || errorToken
  div(class="container")
    div(class="row")
      div(style={width: "60%", margin:"0 auto"})
        h3(style={"text-align":"center", "margin-top":"80px"}) Exportar ganadores de Quiniela por sorteo
        form(action="/quiniela/sorteos/:gameDayId" METHOD="GET")
          div(class="form-group")
            input(class='form-control' type='number' min='0' max='99999' name='extGameDayId' placeholder='Introduzca el numero de sorteo que desea consultar' required)          
          div(class="form-group")
            input(class="btn btn-primary btn-block" type="submit" value="Buscar")          
          if errorToken 
            a(href="/autenticacion") Inicie sesi√≥n nuevamente           
          else
            a(href='/tablero') Volver al menu 
        